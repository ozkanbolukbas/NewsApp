<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/news_setting_title">
    <ListPreference
        android:title="@string/sections_label"
        android:entries="@array/news_section_labels"
        android:entryValues="@array/news_section_values"
        android:key="@string/section_key"
        android:defaultValue="@string/section_default"
        />
    <ListPreference
        android:title="@string/order_by_label"
        android:entries="@array/order_by_lables"
        android:entryValues="@array/order_by_values"
        android:key="@string/order_by_key"
        android:defaultValue="@string/order_by_default"/>

</PreferenceScreen>